<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lst_layout1"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/lst_img_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_add" />

    <TextView
        android:id="@+id/lst3_txt2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/lst_img1"
        app:layout_constraintStart_toEndOf="@+id/lst_img_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lst_txt2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/lst_img1"
        app:layout_constraintStart_toEndOf="@+id/lst_img_icon"
        app:layout_constraintTop_toBottomOf="@+id/lst3_txt2" />

    <TextView
        android:id="@+id/lst_txt3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/lst_img1"
        app:layout_constraintStart_toEndOf="@+id/lst_img_icon"
        app:layout_constraintTop_toBottomOf="@+id/lst_txt2" />

    <ImageView
        android:id="@+id/lst_img3"
        android:layout_width="24dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/ic_launcher_reorder" />

    <ImageView
        android:id="@+id/lst_img2"
        android:layout_width="24dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lst_img3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_changer" />

    <ImageView
        android:id="@+id/lst_img1"
        android:layout_width="24dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lst_img2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_edit" />
</androidx.constraintlayout.widget.ConstraintLayout>